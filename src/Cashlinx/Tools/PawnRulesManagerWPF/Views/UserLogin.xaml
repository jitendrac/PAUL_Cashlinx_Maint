<Window x:Class="PawnRulesManagerWPF.Views.UserLogin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource WindowBackgroundBrush}"        
    Title="Business Rules Manager - Login" Height="160" Width="240" 
    WindowStartupLocation="CenterScreen"
    Icon="/PawnRulesManagerWPF;component/Images/key.ico">
    <Grid>
        <StackPanel Margin="5">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Width="60" TextAlignment="Right"  Margin="0,0,5,0"  >User:</TextBlock>
                <TextBox Name="txtUser" Height="22" Width="100" KeyDown="txtUser_KeyDown"></TextBox> 
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Width="60" TextAlignment="Right"  Margin="0,0,5,0">Password:</TextBlock>                
                <PasswordBox Name="txtPassword" Height="22" Width="100" PasswordChar="*" KeyDown="txtPassword_KeyDown"></PasswordBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20">
                <Button Name="cmdLogin" Width="80" Margin="0,0,5,0"  Click="cmdLogin_Click" >Login</Button>
                <Button Name="cmdCancel" Width="80"  Click="cmdCancel_Click">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
