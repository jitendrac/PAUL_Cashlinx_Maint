<UserControl x:Class="PawnRulesManagerWPF.Views.EditBusinessRule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="140" Width="300">
    <Grid Margin="10,20,10,10" >
        <GroupBox Header="Business Rule"  FontWeight="Bold">
            <StackPanel Orientation="Vertical" Margin="0,5,0,0">
                    <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Right" Width="120" FontWeight="Bold" Margin="0,0,5,0" TextAlignment="Right" >Rule Name:</TextBlock>
                <TextBox Name="txtRuleName" Width="120" Text="{Binding Path=Code}"></TextBox>
            </StackPanel>
                    <StackPanel Orientation="Horizontal"  Margin="0,5,0,0">
                <TextBlock HorizontalAlignment="Right" Width="120" FontWeight="Bold" Margin="0,0,5,0" TextAlignment="Right" >Components Count:</TextBlock>
                <TextBlock Name="txtComponentCount" Width="120" Text=""></TextBlock>
            </StackPanel>
            
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Name="cmdOkay" Click="cmdOkay_Click" Width="100" Margin="5">Okay</Button>            
                    <Button Name="cmdCancel" Click="cmdCancel_Click" Width="100" Margin="5">Cancel</Button>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
